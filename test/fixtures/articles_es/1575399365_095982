	                    sel:'#cuerpo_noticia > p, #cuerpo > p',
	                    min:1,
	                    cls:"publi_luto_vertical",
	                    pos:{
	                        'mpu1': [1,[[300,600],[300,250]]],
	                        'mpu2': [5,[300,250]]
	                      }
	                	}];
			}

			// ----------------------------------------------------------- //
			// Noticias sin columna dos, NO llevan robas MPU1, MPU2, MPU3
			// ----------------------------------------------------------- //
			if (false == true){
				lo_bit = "";
