        if(typeof EPETLinkedin != "undefined")   new EPETLinkedin ( document.getElementById('inferior_linkedin'), params );
        if(typeof EPETPinterest != "undefined")  new EPETPinterest ( document.getElementById('inferior_pinit'), params );
    </script>
</aside>
